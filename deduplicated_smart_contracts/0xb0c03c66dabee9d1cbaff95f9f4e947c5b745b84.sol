pragma solidity 0.6.12;


contract Bridge is Ownable {

    IERC20 public targetToken;
    address public bridgeProxy;
    address public caller;

    event LockIn(address indexed user, uint256 amount);
    event CrossChain(address bridgeProxy, uint256 amount);
    
    constructor(
        address _targetToken,
        address _bridgeProxy,
        address _caller
    ) public {
        require(_targetToken != address(0), "Bridge: zero address");
        require(_bridgeProxy != address(0), "Bridge: zero address");
        require(_caller != address(0), "Bridge: zero address");
        targetToken = IERC20(_targetToken);
        bridgeProxy = _bridgeProxy;
        caller = _caller;
    }

    function setBridgeProxy(address _bridgeProxy) public onlyOwner {
        require(_bridgeProxy != address(0), "Bridge: zero address");
        bridgeProxy = _bridgeProxy;
    }

    function setCaller(address _newAddress) public onlyOwner {
        require(_newAddress != address(0), "Bridge: zero address");
        caller = _newAddress;
    }

    // need approve first
    function lockIn(uint256 amount) external {
        targetToken.transferFrom(msg.sender, address(this), amount);
        emit LockIn(msg.sender, amount);
    }

    function toProxy(uint256 amount) external {
        require(msg.sender == caller, "Bridge: Can only be called from caller");
        targetToken.transfer(bridgeProxy, amount);
        emit CrossChain(bridgeProxy, amount);
    }
    
}