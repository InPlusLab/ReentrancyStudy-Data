contract WETH9 {

    string public name     = "Wrapped Ether";

    string public symbol   = "WETH";

    uint8  public decimals = 18;



    event  Approval(address indexed src, address indexed guy, uint wad);

    event  Transfer(address indexed src, address indexed dst, uint wad);

    event  Deposit(address indexed dst, uint wad);

    event  Withdrawal(address indexed src, uint wad);



    mapping (address => uint)                       public  balanceOf;

    mapping (address => mapping (address => uint))  public  allowance;



    function() public payable {

        deposit();

    }

    function deposit() public payable {

        balanceOf[msg.sender] += msg.value;

        Deposit(msg.sender, msg.value);

    }

    function withdraw(uint wad) public {

        require(balanceOf[msg.sender] >= wad);

        balanceOf[msg.sender] -= wad;

        msg.sender.transfer(wad);

        Withdrawal(msg.sender, wad);

    }



    function totalSupply() public view returns (uint) {

        return this.balance;

    }



    function approve(address guy, uint wad) public returns (bool) {

        allowance[msg.sender][guy] = wad;

        Approval(msg.sender, guy, wad);

        return true;

    }



    function transfer(address dst, uint wad) public returns (bool) {

        return transferFrom(msg.sender, dst, wad);

    }



    function transferFrom(address src, address dst, uint wad)

        public

        returns (bool)

    {

        require(balanceOf[src] >= wad);



        if (src != msg.sender && allowance[src][msg.sender] != uint(-1)) {

            require(allowance[src][msg.sender] >= wad);

            allowance[src][msg.sender] -= wad;

        }



        balanceOf[src] -= wad;

        balanceOf[dst] += wad;



        Transfer(src, dst, wad);



        return true;

    }

}





contract StakeholderPot is Ownable {

  WETH9 weth;

  MintableBurnableToken stakeToken;

  bool private _upgrading;



  event Debug(uint256 data);



  constructor(address _weth, address _stakeToken) Ownable() public {

    weth = WETH9(_weth);

    stakeToken = MintableBurnableToken(_stakeToken);

  }



  function() public payable {

    // If we get paid in ETH, convert to WETH so payouts work the same.

    // Converting to WETH also makes payouts a bit safer, as we don't have to

    // worry about code execution if the stakeholder is a contract.

    if(!_upgrading) {

      weth.deposit.value(msg.value)();

    }

  }



  function transferToken(address token, address recipient, uint quantity) external onlyOwner {

    require(ERC20(token).transfer(recipient, quantity));

  }



  function upgradeWeth(address _newWeth) external onlyOwner {

    // At some point in the future we may want to upgrade from one WETH

    // contract to a new one.

    _upgrading = true;

    weth.withdraw(weth.balanceOf(address(this)));

    _upgrading = false;

    weth = WETH9(_newWeth);

    weth.deposit.value(address(this).balance)();

  }



  function redeem(uint shares, address[] tokens) public {

    require(

      stakeToken.balanceOf(msg.sender) >= shares &&

      stakeToken.allowance(msg.sender, address(this)) >= shares,

      "Insufficient balance or allowance"

    );

    uint totalShares = stakeToken.totalSupply();

    // Burn the sender's share before sending their tokens to ensure that a

    // malicious token contract couldn't use reentrancy to empty the pot.

    stakeToken.burnFrom(msg.sender, shares);



    for(uint i=0; i < tokens.length; i++) {

      uint balance = ERC20(tokens[i]).balanceOf(address(this));

      ERC20(tokens[i]).transfer(msg.sender, SafeMath.mul(balance, shares) / totalShares);

    }

  }

}