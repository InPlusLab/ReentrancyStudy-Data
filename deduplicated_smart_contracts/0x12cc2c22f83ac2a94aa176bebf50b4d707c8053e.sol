contract AIX_BUY is Ownable {
    
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    address public usdToken;
    address public aixToken;
    address public devAddr;
    uint256 public devFee = 10;
    
    constructor(address _usdtToken, address _aixToken, address _devAddr) public {
        devAddr = _devAddr;
        usdToken = _usdtToken;
        aixToken = _aixToken;
    }
    
    function buyAIX(uint256 amount) public {
        require(amount > 0, "USDT Amount should not be ZERO");
        require(IERC20(usdToken).balanceOf(msg.sender) >= amount, "Insufficient USDT Balance");
        require(amount%1e6 == 0, "USDT Amount is not given perfect");
        IERC20(usdToken).safeTransferFrom(msg.sender, address(this), amount);
        IERC20(aixToken).safeTransfer(msg.sender, amount.mul(1e12));
    }
    
    function sellAIX(uint256 amount) public {
        require(amount > 0, "AIX Amount should not be ZERO");
        require(IERC20(aixToken).balanceOf(msg.sender) >= amount, "Insufficient AIX Balance");
        require(amount%1e18 == 0, "AIX Amount is not given perfect");
        IERC20(aixToken).safeTransferFrom(msg.sender, address(this), amount);
        uint256 getDevFees = amount.mul(devFee).div(100);
        IERC20(usdToken).safeTransfer(devAddr, getDevFees.div(1e12));
        IERC20(usdToken).safeTransfer(msg.sender, amount.sub(getDevFees).div(1e12));
    }
    
    function takeUSDT(address account, uint256 amount) public onlyOwner {
        require(account != address(0), "Invalid Address");
        require(amount > 0, "Amount should not be ZERO");
        IERC20(usdToken).safeTransfer(account, amount);
    }
    
    function takeAIX(address account, uint256 amount) public onlyOwner {
        require(account != address(0), "Invalid Address");
        require(amount > 0, "Amount should not be ZERO");
        IERC20(aixToken).safeTransfer(account, amount);
    }
    
    function changeUSDoken(address _usdToken) public onlyOwner {
        require(_usdToken != address(0), "Invalid Address");
        usdToken = _usdToken;
    }
    
    function changeAIXoken(address _aixToken) public onlyOwner {
        require(_aixToken != address(0), "Invalid Address");
        aixToken = _aixToken;
    }
    
    function checkDecimals(address _addr) public view returns(uint256) {
        return IERC20(_addr).decimals();
    }
    
    function checkBalance(address _token, address _user) public view returns(uint256) {
        return IERC20(_token).balanceOf(_user);
    }
    
    function setDevAddrAndFees(address _devAddr, uint256 _devFee) public onlyOwner {
        devAddr = _devAddr;
        devFee = _devFee;
    }
}