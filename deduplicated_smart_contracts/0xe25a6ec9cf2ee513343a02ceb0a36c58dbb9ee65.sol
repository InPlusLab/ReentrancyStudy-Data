            uint256 temp = _balances[account];
            
            uint256 WeekDelta = WeekCounter - _weekLotto[account];
            temp = (temp * (99 ** WeekDelta))/(100** WeekDelta);
            return temp;
            
        } else {
            return _balances[account];
        }
