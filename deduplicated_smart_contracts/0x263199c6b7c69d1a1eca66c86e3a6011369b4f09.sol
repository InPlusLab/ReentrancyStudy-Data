    modifier saleOrUnfrozen(address account) {
        require( (m_frozen == false) || isSale(account) );
        _;
    }

    modifier onlySale(address account) {
        require(isSale(account));
        _;
    }

    modifier privilegedAllowed {
        require(m_allowPrivileged);
        _;
    }


