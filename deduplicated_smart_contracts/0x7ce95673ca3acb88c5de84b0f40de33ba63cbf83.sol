    function mint(address account, uint256 amount)
        public
        override
        nonReentrant
        onlyManager
    {
        require(amount > 0, "INVALID_MINT_AMOUNT");
        IOracleAdapter oracleAdapter = _getOracleAdapter();
        oracleAdapter.lock();
        _mint(account, amount);
        emit Mint(account, amount);
    }

