    /* impl-specific storage variables */
    /* ------------------------------- */
    /// @notice used to protect init functions for upgrades
    address public proxyAdmin;
    /// @notice used to protect mint and burn function
    IAddressRegistryV2 public addressRegistry;

    /* ------------------------------- */

