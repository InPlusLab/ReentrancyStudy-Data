            rewardRate = baseReward.div(duration);
            periodFinish = block.timestamp.add(duration);
            emit RewardAdded(newRewards);
        }
        _;
    }
    
    function startRewardDistribution() external onlyGovernance updateReward(address(0)) {
        // increased buffer for scaling factor
        require(baseReward < uint256(-1) / 10**22, "rewards too large, would lock");
        require(!initialized, "already initialized");
        initialized = true;
        
        uint256 scalingFactor = REETH(address(rewardsToken)).reethScalingFactor();
        uint256 newRewards = baseReward.mul(scalingFactor).div(1e18);
        REETH(address(rewardsToken)).mint(address(this), newRewards);
        lastUpdateTime = block.timestamp;
        rewardRate = baseReward.div(duration);
        periodFinish = block.timestamp.add(duration);
        emit RewardAdded(newRewards);        
    }
    
    // Governance functions
    // Timelock variables
    
    uint256 private _timelockStart; // The start of the timelock to change governance variables
    uint256 private _timelockType; // The function that needs to be changed
    uint256 constant _timelockDuration = 86400; // Timelock is 24 hours
    
    // Reusable timelock variables
    address private _timelock_address;
    uint256 private _timelock_data;
    bool private _timelock_bool;
    
    modifier timelockConditionsMet(uint256 _type) {
        require(_timelockType == _type, "Timelock not acquired for this function");
        _timelockType = 0; // Reset the type once the timelock is used
        if(stakingToken.balanceOf(address(this)) > 0){ // Timelock only applies when balance exists
            require(now >= _timelockStart + _timelockDuration, "Timelock time not met");
        }
        _;
    }
    
    // Change the owner of the token contract
    // --------------------
    function startGovernanceChange(address _address) external onlyGovernance {
        _timelockStart = now;
        _timelockType = 1;
        _timelock_address = _address;       
    }
    
    function finishGovernanceChange() external onlyGovernance timelockConditionsMet(1) {
        transferGovernance(_timelock_address);
    }
    // --------------------
    
    // Change the time to get the reward
    // --------------------
    function startChangeRewardDuration(uint256 _duration) external onlyGovernance {
        require(_duration > 60,"Cannot set duration to less than 1 minute");
        _timelockStart = now;
        _timelockType = 2;
        _timelock_data = _duration;
    }
    
    function finishChangeRewardDuration() external onlyGovernance timelockConditionsMet(2) {
        duration = _timelock_data;
        emit RewardsDurationUpdated(duration);
    }
    // --------------------
    
    // Change the amount of reward
    // --------------------
    function startChangeRewardAmount(uint256 _amount) external onlyGovernance {
        _timelockStart = now;
        _timelockType = 3;
        _timelock_data = _amount;
    }
    
    function finishChangeRewardAmount() external onlyGovernance timelockConditionsMet(3) {
        baseReward = _timelock_data;
        emit BaseRewardChanged(baseReward);
    }
    // --------------------
    
    // Change if rewards are activated
    // --------------------
    function startChangeRewardStopped(bool _stopped) external onlyGovernance {
        _timelockStart = now;
        _timelockType = 4;
        _timelock_bool = _stopped;
    }
    
    function finishChangeRewardStopped() external onlyGovernance timelockConditionsMet(4) {
        rewardsStopped = _timelock_bool;
    }
