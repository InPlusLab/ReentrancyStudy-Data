pragma solidity 0.5.8;




interface OneSplit {
    function goodSwap(
        ERC20 fromToken,
        ERC20 toToken,
        uint256 amount,
        uint256 minReturn,
        uint256 parts,
        uint256 disableFlags // 1 - Uniswap, 2 - Kyber, 4 - Bancor, 8 - Oasis, 16 - Compound, 32 - Fulcrum, 64 - Chai, 128 - Aave, 256 - SmartToken, 1024 - bDAI
    ) external payable;
}

contract OneSplitTradeLogic is Ownable, ReentrancyGuard
{
    bool public isTradeLogic = true;
    OneSplit public oneSplit;

    constructor(address _oneSplit) public
    {
        setOneSplit(_oneSplit);
    }

    function swap(address source, address dest, uint sourceAmount) public nonReentrant returns (uint)
    {
        ERC20(source).approve(address(oneSplit), sourceAmount);
        oneSplit.goodSwap(ERC20(source), ERC20(dest), sourceAmount, 1, 1, 0);
        return ERC20(dest).balanceOf(address(this));
    }

    function setOneSplit(address _oneSplit) public onlyOwner
    {
        oneSplit = OneSplit(_oneSplit);
    }
}