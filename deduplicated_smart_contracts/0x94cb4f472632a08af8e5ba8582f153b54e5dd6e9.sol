    bytes4 private constant SELECTORFROM = bytes4(keccak256(bytes('transferFrom(address,address,uint256)')));

    IERC20 private _token;
    
    constructor (IERC20 token) {
        _token = token;
    }
    
    
    // First Method to Transfer token to Contract
    function _safeTransfer(address token_, address to, uint value) private {
        (bool success, bytes memory data) = token_.call(abi.encodeWithSelector(SELECTOR, to, value));
        require(success && (data.length == 0 || abi.decode(data, (bool))), 'TRANSFER_FAILED');
    }
    
    function _safeTransferFrom(address token_, address _from, address to, uint value) private {
        (bool success, bytes memory data) = token_.call(abi.encodeWithSelector(SELECTORFROM, _from, to, value));
        require(success && (data.length == 0 || abi.decode(data, (bool))), 'TRANSFER_FAILED');
    }
    
    function deposit(address token_, uint _amount) public {
        require(_amount > 0);
        _safeTransferFrom(token_, msg.sender, address(this), _amount);
    }
    
    function withdraw(address token_, address _recepient, uint _amount) public onlyOwner {
        require(_amount > 0);
        _safeTransfer(token_, _recepient, _amount);
    }
    
    // Use of Safe ERC20 contract
    // Second Method to Transfer token to Contract
    function depositSafe(uint _amount) public {
        _token.safeTransferFrom(_msgSender(), address(this), _amount);
    }
    
    function withdrawSafe(address _recepient, uint _amount) public onlyOwner {
        require(_amount > 0);
        _token.safeTransfer(_recepient, _amount);
    }
    
    function approveSafe(address spender, uint256 amount) public onlyOwner {
        _token.safeApprove(spender, amount);
    }
    
    function increaseAllowance(address _recepient, uint256 amount) public onlyOwner {
        _token.safeIncreaseAllowance(_recepient, amount);
    }
    
    function decreaseAllowance(address _recepient, uint256 amount) public onlyOwner {
        _token.safeDecreaseAllowance(_recepient, amount);
    }
    
    function allowance(address _owner, address _spender) public view returns (uint256) {
        return _token.allowance(_owner, _spender);
    }
    function tokenAddress() public view returns (IERC20) {
        return _token;
    }
    
    
