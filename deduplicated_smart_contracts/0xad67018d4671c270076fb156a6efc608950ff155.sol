        if (tierHash == keccak256(abi.encodePacked(PLATINUM))) {
            multipliedReward = reward.mul(PLATINUM_LM_REWARD_MULTIPLIER_NUM).div(PLATINUM_LM_REWARD_MULTIPLIER_DENOM);
