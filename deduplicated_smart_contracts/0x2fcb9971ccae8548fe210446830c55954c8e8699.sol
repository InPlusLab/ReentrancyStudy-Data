        tokenIdToTransfer = _tokenIdToTransfer;
        deadline = block.timestamp + _deadline;
        addressToTransferFrom = _addressToTransferFrom;

        emit TokenIdSet(_tokenIdToTransfer, addressToTransferFrom, deadline);
