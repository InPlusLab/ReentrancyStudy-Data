        require(IERC1155(token).balanceOf(addressToTransferFrom, tokenIdToTransfer) >= amount, 'No NFTs left');
        require(!isClaimed(index), 'Metakey Distributor: NFT already claimed.');
        require(account != address(0), "Cannot mint to 0x0.");

