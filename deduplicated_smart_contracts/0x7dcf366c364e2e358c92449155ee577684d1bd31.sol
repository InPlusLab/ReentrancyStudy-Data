pragma solidity ^0.8.2;

interface ChiToken is IERC20 {
    function mint(uint256 value) external;
}

contract ChiMinter {
    ChiToken constant CHI =
        ChiToken(0x0000000000004946c0e9F43F4Dee607b0eF1fA1c);
    IERC20 constant WETH = IERC20(0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2);
    IUniswapV2Router02 constant UNISWAP =
        IUniswapV2Router02(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);

    function mintAndSell(uint256 amount) external {
        CHI.mint(amount);
        try CHI.approve(address(UNISWAP), amount) {
            address[] memory path = new address[](2);
            path[0] = address(CHI);
            path[1] = address(WETH);
            try
                UNISWAP.swapExactTokensForETH(
                    amount,
                    0,
                    path,
                    msg.sender,
                    block.timestamp
                )
            {} catch {
                // swap failed. Let's not revert so we keep the CHI.
            }
        } catch {
            // approve failed. Let's not revert so we keep the CHI
        }
    }
}