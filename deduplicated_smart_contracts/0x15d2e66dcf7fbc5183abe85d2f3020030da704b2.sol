     * @notice Initializes the Option contract as an ERC721 token.
     */
    function initialize(
        string calldata _name,
        string calldata _symbol,
        address _uriFetcher
    ) external initializer {
        __ERC721_init(_name, _symbol);
        uriFetcher = OptionURIFetcher(_uriFetcher);
    }

