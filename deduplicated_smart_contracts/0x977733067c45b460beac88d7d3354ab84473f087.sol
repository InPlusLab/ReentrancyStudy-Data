contract DonationsPipeline is 
  Ownable
{
 
  
  address public donationToken; 
  address public donationDelegate; 
 
   
  constructor(  address _donationToken, address _donationDelegate  ) 
  { 
    
   donationToken = _donationToken;
   donationDelegate = _donationDelegate;
  }
  
   

    
  function donateTokens(   ) public returns (bool){
    uint256 internalVaultBalance = IERC20(donationToken).balanceOf(address(this));
    
    IERC20(donationToken).transfer( donationDelegate, internalVaultBalance );
    
    return true;
  }
  
  
     
  function extractTokenOfType(  address currencyToClaim ) public onlyOwner returns (bool){
      
      
      require(currencyToClaim != donationToken, 'that currency must be donated');

      uint256 internalVaultBalance = IERC20(currencyToClaim ).balanceOf(address(this));
    
      IERC20(currencyToClaim).transfer( msg.sender, internalVaultBalance );  
       
      return true;
  } 
  
  function extractETH( ) public payable onlyOwner returns (bool) {
       
    payable(msg.sender).transfer( address(this).balance  );
     
    return true;
  }
   
    
   
