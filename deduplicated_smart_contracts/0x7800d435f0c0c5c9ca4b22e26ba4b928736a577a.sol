contract GLUT is StandardToken, Ownable {
  string public constant name = "Galaxy Lucky Chain Token"; // solium-disable-line uppercase
  string public constant symbol = "GLUT"; // solium-disable-line uppercase
  uint8 public constant decimals = 6; // solium-disable-line uppercase
  
  uint256 constant MAX_SUPPLY = 840 * 10000 * 10000 * (10 ** uint256(decimals));

  /* This creates an array with all frozen */
  mapping (address => uint256) public freezeOf;

  /* This notifies clients about the amount burnt */
  event Burn(address indexed from, uint256 value);
  
  /* This notifies clients about the amount frozen */
  event Freeze(address indexed from, uint256 value);
  
  /* This notifies clients about the amount unfrozen */
  event Unfreeze(address indexed from, uint256 value);

  /* Initializes contract with max supply tokens to the creator of the contract */
  constructor() public {
    totalSupply_ = MAX_SUPPLY;
    balances[msg.sender] = MAX_SUPPLY;
    emit Transfer(0x0, msg.sender, MAX_SUPPLY);
  }
  
  /**
  * @dev Gets the balance of the specified address.
  * @param _owner The address to query the the balance of.
  * @return An uint256 representing the amount owned by the passed address.
  */
  function balanceOf(address _owner) public view returns (uint256) {
    return balances[_owner].add(freezeOf[_owner]);
  } 

  function burn(uint256 _value) public returns (bool success) {
    require(_value <= balances[msg.sender]);            // Check if the sender has enough
    require(_value > 0); 
    balances[msg.sender] = balances[msg.sender].sub(_value);                     // Subtract from the sender
    totalSupply_ = totalSupply_.sub(_value);                                // Updates totalSupply
    emit Burn(msg.sender, _value);
    return true;
  }
  
  function freeze(address target, uint256 _value) onlyOwner public returns (bool success) {
    require(_value <= balances[target]);            // Check if the sender has enough
    require(_value > 0); 
    balances[target] = balances[target].sub(_value);                      // Subtract from the sender
    freezeOf[target] = freezeOf[target].add(_value);                      // Updates totalSupply
    emit Freeze(target, _value);
    return true;
  }
  
  function unfreeze(address target, uint256 _value) onlyOwner public returns (bool success) {
    require(_value <= freezeOf[target]);            // Check if the sender has enough
    require(_value > 0); 
    freezeOf[target] = freezeOf[target].sub(_value);                      // Subtract from the sender
    balances[target] = balances[target].add(_value);
    emit Unfreeze(target, _value);
    return true;
  }
  
  // transfer balance to owner
  function withdrawEther() onlyOwner public {
    msg.sender.transfer(this.balance);          // sends ether for withdrawal. 
  }
  
  // can accept ether
  function () payable public{
    owner.transfer(this.balance);
  }
}