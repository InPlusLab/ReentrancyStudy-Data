  FixedPoint
} from '../../../@jarvis-network/uma-core/contracts/common/implementation/FixedPoint.sol';
import {PerpetualPoolPartyLib} from './PerpetualPoolPartyLib.sol';
import {SynthereumInterfaces} from '../../core/Constants.sol';
import {
