    function sellFYDai(IPool pool, address to, uint128 fyDaiIn, uint128 minDaiOut)
        public
        returns(uint256)
    {
        onlyKnownPool(pool);
        uint256 daiOut = pool.sellFYDai(msg.sender, to, fyDaiIn);
        require(
